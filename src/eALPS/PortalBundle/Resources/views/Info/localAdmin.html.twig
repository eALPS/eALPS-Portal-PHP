		var bodytext = str_replace(array("\r\n", "\n", "\r"), '<br />', $('#infoBody-' + id).html() );
		$('#editInfoBody').text(bodytext);
		
#}
		$('#editModal').modal('show');
		
	});
</script>

{% endblock %}